{
  "name": "medication-reminders",
  "version": "2.0.0",
  "description": "Medication reminder system with Discord bot, REST API, PWA, and real-time WebSocket updates",
  "main": "dist/api/index.js",
  "workspaces": [
    "src/pwa"
  ],
  "scripts": {
    "build": "npm run build:api && npm run build:pwa",
    "build:api": "tsc",
    "build:pwa": "cd src/pwa && npm run build",
    "start:api": "node dist/api/index.js",
    "start:bot": "node dist/discord-bot/index.js",
    "dev:api": "ts-node src/api/index.ts",
    "dev:bot": "ts-node src/discord-bot/index.ts",
    "dev:pwa": "cd src/pwa && npm run dev",
    "watch": "tsc -w",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "keywords": [
    "discord",
    "bot",
    "medication",
    "reminder",
    "health",
    "api",
    "rest",
    "pwa",
    "websocket",
    "real-time"
  ],
  "author": "Clove Twilight",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "discord.js": "^14.17.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-schedule": "^2.1.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/node-schedule": "^2.1.7",
    "@types/ws": "^8.5.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}